<h1>Login</h1>

<% if flash[:notice]%>
<%= flash[:notice]%>
<%end%>

<%= form_tag('/sessions') do %>
    <p>
        <%= label_tag 'Email:'%>
        <%= text_field_tag 'email'%>
    </p>

    <p>
        <%= label_tag 'Password:'%>
        <%= text_field_tag 'password_digest'%>
    </p>

    <%= submit_tag 'Login'%>

<%end%>